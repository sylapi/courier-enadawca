{
    "name": "sylapi/courier-enadawca",
    "type": "library",
    "description": "Courier Enadawca",
    "keywords": [
        "courier",
        "enadawca",
        "shipping"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Adrian Zapotoczny"
        }
    ],
    "require": {
        "php": ">=7.4.0",
        "sylapi/courier": "^2.0",
        "rakit/validation": "^1.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "phpstan/phpstan": "^0.12.77"
    },
    "autoload": {
        "psr-4": { 
            "Sylapi\\Courier\\Enadawca\\" : "src/",
            "": "models/"
        }
    },
    "autoload-dev": {
        "psr-4": { "Sylapi\\Courier\\Enadawca\\Tests\\": "tests/" }
    },
    "scripts": {
        "tests": "vendor/bin/phpunit",
        "phpstan": "vendor/bin/phpstan analyse src tests",
        "coverage": "XDEBUG_MODE=coverage  vendor/bin/phpunit --verbose --coverage-text",
        "coverage-html": "XDEBUG_MODE=coverage  vendor/bin/phpunit --coverage-html ./coverage/"
    },    
    "prefer-stable": false
}
